{% extends 'base.html.twig' %}

{% block title %}ARM/{{ controller_name }}!{% endblock %}

{% block nav_title %}<h1>ARM/{{ controller_name }} </h1>{% endblock %}
{% block body_title %}<h1>ARM/{{ controller_name }} </h1>{% endblock %}

{% block body_content %}
        <div class="row" style="spacer-small">
        </div>
       <div class="jumbotron">
             <form action="/login_action">
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd">
                </div>
                <div class="checkbox">
                        <label><input type="checkbox" > Remember me</label>
                </div>
                <button type="submit" class="btn btn-default w-100">Submit</button>
            </form> 
         </div>
{% endblock %}

