{% extends 'base.html.twig' %}

{% block body_content %}
    <form method="POST" action="{{ path('repo') }}">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="repo_name" placeholder="Namel">
        </div>
        {% for mod in mods %}
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="{{ mod }}" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">{{ mod }}</label>
            </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary">Erstellen</button>
    </form>
{% endblock %}
